<!-- views/reflection.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Reflections | Random Act of Sunnah</title>
  <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">

<!-- Custom CSS -->
<link rel="stylesheet" href="/styles.css">

</head>
<body>
  <div class="container py-4">

    <h1 class="headline">📝 Your Sunnah Reflection</h1>

    <div class="navigation-links mb-4">
      <a href="/community-posts" class="btn add-post-btn">🌐 View Community Posts</a>
      <a href="/dashboard" class="btn dashboard-link">← Back to Dashboard</a>
    </div>

    <!-- Form to create a new reflection -->
    <form action="/reflections" method="POST" class="reflection-form mb-5">
      <div class="mb-3">
        <label for="content" class="form-label">✨ What did you experience while doing the sunnah?</label>
        <textarea name="content" id="content" rows="4" class="form-control" required></textarea>
      </div>
      <button type="submit" class="add-reflection-btn">Add Reflection</button>

    </form>

    <hr>

    <h2 class="section-title">📖 Your Previous Reflections</h2>

    <% if (reflections && reflections.length > 0) { %>
      <% reflections.forEach((reflection) => { %>
        <div class="reflection-card">
          <p><%= reflection.content %></p>
          <div class="d-flex gap-2">
            <form action="/reflections/<%= reflection.id %>/edit" method="GET">
              <button type="submit" class="btn edit-btn">✏️ Edit</button>
            </form>

            <form action="/reflections/<%= reflection.id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn delete-btn">🗑️ Delete</button>
            </form>
          </div>
        </div>
        <hr>
      <% }) %>
    <% } else { %>
      <p class="no-posts">You haven't added any reflections yet.</p>
    <% } %>

  </div>
</body>

</html>



